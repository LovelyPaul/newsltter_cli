# =================================================================
# 환경 변수 설정 파일 (Environment Variables)
# =================================================================
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요.
# 명령어: cp .env.example .env (macOS/Linux)
#         copy .env.example .env (Windows)
#
# 주의: .env 파일은 절대 Git에 커밋하지 마세요!
# =================================================================

# -----------------------------------------------------------------
# AI 요약 서비스 설정 (택 1 또는 모두 설정 가능)
# -----------------------------------------------------------------

# OpenAI GPT API 설정
# 발급: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.3

# Google Gemini API 설정
# 발급: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=200
GEMINI_TEMPERATURE=0.3

# Anthropic Claude API 설정 (선택사항)
# 발급: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=200

# -----------------------------------------------------------------
# AI 요약 서비스 우선순위 설정
# -----------------------------------------------------------------
# 사용할 AI 서비스 선택 (openai, gemini, claude, none)
# none으로 설정 시 RSS description을 그대로 사용
AI_SUMMARY_PROVIDER=gemini

# AI 요약 사용 여부 (true/false)
# false 설정 시 RSS description을 간단히 정리해서 사용
USE_AI_SUMMARY=true


# -----------------------------------------------------------------
# 회사 프록시 설정 (필요 시)
# -----------------------------------------------------------------
# 회사 네트워크에서 프록시가 필요한 경우 설정
HTTP_PROXY=
HTTPS_PROXY=
# 예시: http://proxy.company.com:8080

# 프록시 예외 도메인 (쉼표로 구분)
NO_PROXY=localhost,127.0.0.1


# -----------------------------------------------------------------
# 이메일 자동 발송 설정 (Phase 4 - 선택사항)
# -----------------------------------------------------------------
# Outlook/Exchange SMTP 설정
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-email-password-here

# 발송자 정보
EMAIL_FROM_NAME=MS본부 뉴스레터
EMAIL_FROM_ADDRESS=newsletter@company.com

# 수신자 리스트 (쉼표로 구분)
EMAIL_TO_LIST=ms-dept@company.com,tech-team@company.com


# -----------------------------------------------------------------
# 로깅 설정
# -----------------------------------------------------------------
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 보관 기간 (일)
LOG_RETENTION_DAYS=30


# -----------------------------------------------------------------
# RSS 피드 타임아웃 설정
# -----------------------------------------------------------------
# RSS 요청 타임아웃 (초)
RSS_TIMEOUT=10

# RSS 재시도 횟수
RSS_RETRY_COUNT=3


# -----------------------------------------------------------------
# 개발/테스트 모드
# -----------------------------------------------------------------
# 개발 모드 활성화 (true 시 더 상세한 로그 출력)
DEBUG_MODE=false

# 테스트 모드 (true 시 실제 API 호출 없이 더미 데이터 사용)
TEST_MODE=false


# -----------------------------------------------------------------
# 캐싱 설정 (선택사항)
# -----------------------------------------------------------------
# RSS 피드 캐시 사용 여부
USE_CACHE=false

# 캐시 유효 시간 (분)
CACHE_DURATION_MINUTES=60


# -----------------------------------------------------------------
# 보안 관련 설정
# -----------------------------------------------------------------
# API 키 암호화 사용 여부 (향후 구현)
ENCRYPT_API_KEYS=false

# 로그에 민감 정보 마스킹
MASK_SENSITIVE_DATA=true
